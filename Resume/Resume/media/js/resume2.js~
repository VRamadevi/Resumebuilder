var Xboard=''

function checkform2(){
	
	if(XBoard_valid()){}else{return false;}
	if(Xschool_valid()){}else{return false;}
	if(Xyear_valid()){}else{return false;}
	if(Xmarks_valid()){}else{return false;}
	if(Xcertificate_valid()){}else{return false;}
	if(X2Board_valid()){}else{return false;}
	if(X2school_valid()){}else{return false;}
	if(X2year_valid()){}else{return false;}
	if(X2marks_valid()){}else{return false;}
	if(X2certificate_valid()){}else{return false;}
	if(UGcourse_valid()){}else{return false;}
	if(UGspec_valid()){}else{return false;}
	if(UGuniv_valid()){}else{return false;} 
	if(UGyear_valid()){}else{return false;}
	if(UGmarks_valid){}else{return false;}
	if(UGcertf_valid()){}else{return false;}
	
return true;
}


/*-------------------  x -------------------------*/
function XBoard_valid(){
	Xboard=$('select[name="Xboard"] option:selected').val();
	if(Xboard=='' || Xboard==null ){
		$("#Xboard_test").empty();
		$("#Xboard_test").append("Please select Board");
		return false;		
	}
	else{$("#Xboard_test").empty();}
return true;
}

function Xschool_valid() {
	Xschool=$("input[name=Xschool]").val();
	if(Xschool=='' || Xschool==null ){
		$("#Xschool_test").empty();
		$("#Xschool_test").append("Please Enter School Name");
		return false;		
	}
	else{$("#Xschool_test").empty();}
return true;
}
function Xyear_valid(){
	Xyear=$('select[name="Xyear"] option:selected').val();
	if(Xyear=='' || Xyear==null ){
		$("#Xyear_test").empty();
		$("#Xyear_test").append("Please select year");
		return false	;	
	}
	else{$("#Xyear_test").empty();}
return true;
}
function Xmarks_valid(){
	Xmarks=$("input[name=Xmarks]").val();	
	if(Xmarks=='' || Xmarks==null ){
		$("#Xmarks_test").empty();
		$("#Xmarks_test").append("Please Enter MArks");
		return false;		
	}
	else if(isNaN(Xmarks))	{
		$("#Xmarks_test").empty();
		$("#Xmarks_test").append("Please Enter Numerical digits only");
		return false;		
	}
	else{$("#Xmarks_test").empty();}
return true;
}
function Xcertificate_valid(){
	Xcertificate=$("#Xcertificate").val();
	if(Xcertificate=='' || Xcertificate==null){
	$("#Xcertificate_test").empty();
		$("#Xcertificate_test").append("Please Upload Scanned Certificate");
		return false;		
	}
	else{$("#Xcertificate_test").empty();}
return true;
}

